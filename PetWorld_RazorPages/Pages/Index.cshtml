@page
@model PRN221_GroupProject_PetWorldWeb.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  text-align: center;
  font-family: arial;
  float: left;
  display: table-cell;
  margin-right: 5%;
}
.price {
  color: red;
  font-size: 22px;
}

.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: #000;
  background-color: lightblue;
  text-align: center;
  cursor:pointer;
  width: 70%;
  font-size: 18px;
}

.card button:hover {
  opacity: 0.7;
}
.card img:hover {
    width:100%;
}
</style>

<ul style="list-style: none; margin: 0; padding: 0;>
    @foreach (var item in Model.Product)
    {
        <li style="display: inline">
           <div class="card">
                <img src="~/Image/cat1.png" style="margin-left:auto; margin-right:auto; width:70%; height:50%;"/>
                <h3>@Html.DisplayFor(modelItem => item.ProductName)</h3>
                <p class="price">@Html.DisplayFor(modelItem => item.Price)</p>
                <p><button>Chọn mua</button></p>
            </div>
        </li>
    }
</ul>