@page "/register"
@model PetWorldWeb.Pages.Users.RegisterModel
@{
}

<h3>Registration Form</h3>
@if (@Model.Msg != null){
<div class="alert alert-danger" role="alert">
@Model.Msg
</div>
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.UserName" class="control-label">Your Username: </label>
                <input style="width:500px" asp-for="Customer.UserName" class="form-control" placeholder="Enter Username" required />
                <span asp-validation-for="Customer.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Phone" class="control-label">Your Phone Number:</label>
                <input type="number" asp-for="Customer.Phone" class="form-control" placeholder="0123456789" required />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label">Your Email: </label>
                <input type="email" asp-for="Customer.Email" class="form-control" placeholder="abc@gmail.com" required />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label">Your Address: </label>
                <input asp-for="Customer.Address" class="form-control" required/>
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Customer.Password" class="control-label"></label>
                <input type="password" asp-for="Customer.Password" placeholder="Enter Password" class="form-control" required/>
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Customer.Role" class="control-label"></label>
                <input value="customer" asp-for="Customer.Role" class="form-control"/>
                <span asp-validation-for="Customer.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>