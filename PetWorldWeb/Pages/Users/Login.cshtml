@page "/login"
@model PetWorldWeb.Pages.Users.LoginModel
@{
}

<h3>Login Form</h3>
@Model.Msg
<form method="post" asp-page="Login">
	<table>
		<tr>
			<td>Username</td>
			<td><input type="text" asp-for="@Model.Username" required /></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><input type="password" asp-for="@Model.Password" required /></td>
		</tr>
		<a asp-page="/Users/Register" asp-area="" class="btn btn-info h-100">
                            Create new account
                        </a>
		<tr>
			<td>&nbsp;</td>
			<td><input type="submit" value="Login" /></td>
		</tr>
	</table>
</form>