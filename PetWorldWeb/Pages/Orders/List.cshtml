@page
@model PetWorldWeb.Pages.Orders.ListModel
@using PetWorldWeb.Models
@{

}
<style>
    table {
        background-color:aliceblue;
        border-radius: 30px;
        color: black;
    }
    th, td {
        text-align: center;
    }
    tr:nth-child(even) {
        background-color: #D6EEEE;
    }
    tr {
        border-bottom: 1px solid #ddd;
        line-height: 40px;
    }
    body {
        color: #999;
        background-color: #eec0c6;
        background-image: linear-gradient(315deg, #eec0c6 0%, #7ee8fa 74%);
        font-family: 'Roboto', sans-serif;
    }
</style>
<div class="row">
    <div class="col d-flex justify-content-center">
        <table>
            <tr>
                <th style="width: 100px;">Order Id</th>
                <th style="width: 200px;">Order Date</th>
                <th style="width: 200px;">Shipped Date</th>
                <th style="width: 150px;">Status</th>
                <th style="width: 100px;"></th>
            </tr>
            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>@item.OrderId</td>
                    <td>@item.OrderDate</td>
                    <td>@item.ShippedDate</td>
                    <td>@Constants.OrderStatus[item.Status]</td>
                    <td><a asp-page="/Orders/Details" asp-route-orderid="@item.OrderId">Detail</a></td>
                </tr>
            }
        </table>
    </div>
</div>