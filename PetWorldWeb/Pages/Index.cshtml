@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .raise:hover,
    .raise:focus {
        box-shadow: 0 0.5em 0.5em -0.4em var(--hover);
        transform: translateY(-0.2em);
    }
    a.btn {
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
    }
</style>

<div style="background-color:blanchedalmond ;width: 100vw; height: 30vh; border-end-start-radius: 30px; border-end-end-radius: 30px;" class="container">
    <div class="row align-content-center h-100">
        <div class="col d-flex justify-content-center">
            <a asp-area="" asp-page="/Products/Index" asp-route-type="pet" asp-route-categoryid="1" class="btn h-100">
                <div class="row h-75">
                    <img src="~/Image/DogButton.png" style="height: 150px; width: 150px;" class="raise"/>
                </div>
                <div class="row h-25" >
                    <img src="~/Image/FindMoreButton.png" style="width: 150px; margin-top: 10px;" />
                </div>
            </a>
        </div>
        <div class="col d-flex justify-content-center">
            <a asp-area="" asp-page="/Products/Index" asp-route-type="pet" asp-route-categoryid="2" class="btn h-100">
                <div class="row h-75">
                    <img src="~/Image/CatButton.png" style="height: 150px; width: 150px;" class="raise"/>
                </div>
                <div class="row h-25" >
                    <img src="~/Image/FindMoreButton.png" style="width: 150px; margin-top: 10px;" />
                </div>
            </a>
        </div>
        <div class="col d-flex justify-content-center">
            <a asp-area="" asp-page="/Products/Index" asp-route-type="pet" asp-route-categoryid="3" class="btn h-100">
                <div class="row h-75">
                    <img src="~/Image/HamsterButton.png" style="height: 150px; width: 150px;" class="raise"/>
                </div>
                <div class="row h-25" >
                    <img src="~/Image/FindMoreButton.png" style="width: 150px; margin-top: 10px;" />
                </div>
            </a>
        </div>
    </div>
</div>
<div class="container" style="width: 100vw; height: 40vh; margin-top: 10px;">
    <div class="row">
        <div class="col-4">
            <div class="row" style="height: 49%; margin: 10px;">
                <a asp-area="" asp-page="/Products/Index" asp-route-type="acc" asp-route-categoryid="0" class="btn border-1 h-100" style="background-color:cornsilk; width: 100%; border-radius: 30px;">Pet Accessory</a>
            </div>
            <div class="row" style="height: 49%; margin: 10px;">
                <a asp-page="/Orders/Tracking" class="btn border-1 h-100" style="background-color: cornsilk; width: 100%; border-radius: 30px;">Tracking Order</a>
            </div>
        </div>
        <div class="col-8">
            <div id="carousel" class="carousel slide d-flex justify-content-center" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block" src="~/Image/HomePage-1.jpg" alt="First slide" style="height: 300px; border-radius: 30px; object-fit: contain; margin: auto; ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="~/Image/HomePage-2.jpg" alt="Second slide" style="height: 300px; border-radius: 30px; object-fit: contain; margin: auto; ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="~/Image/HomePage-3.jpg" alt="Third slide" style="height: 300px; border-radius: 30px; object-fit: contain; margin: auto;">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>